---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro'
import Navbar from '../components/Navbar.astro';
import AboutMe from '../components/AboutMe.astro';
import Proyects from '../components/Proyects.astro'
import Footer from '../components/Footer.astro'
import Contact from '../components/Contact.astro';
import Translate from '../components/Translate.astro';
---

<Layout title="chLuis Portolio">
	<main>
		<Navbar />
		<Header />
		<AboutMe />
		<Proyects />
		<Contact />
		<Translate />
	</main>
	<Footer />
</Layout>

<style is:global>
	main {
		font-family: system-ui, sans-serif;
		margin: auto;
		padding: 6px;
		padding-bottom: 0;
		width: 100dvw;
		max-width: calc(100%);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		overflow-x: clip;
	}
	section {
		max-width: 800px;
		margin-inline: auto;
		animation: reveal linear forwards;
		animation-timeline: view();
		animation-range-start: entry -100px;
		animation-range-end: exit 600px;
	}

	@keyframes reveal {
		0% {
			scale: 0.1;
			opacity: 0;
		}

		30%{
			scale: 1;
			opacity: 0.5;
		}
		40% {
			scale: 1;
			opacity: 1;
		}
		70% {
			scale: 1;
			opacity: 1;
		}
		80%{
			opacity: 0.9;
			scale: 1;
		}
		100% {
			opacity: 0;
			scale: 2;
		}
	}
	
</style>
