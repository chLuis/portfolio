---
import Layout from '../layouts/en/Layout.astro';
import Header from '../components/en/Header.astro'
import Navbar from '../components/en/Navbar.astro';
import Education from '../components/en/Education.astro'
import Experience from '../components/en/Experience.astro';
import Proyects from '../components/en/Proyects.astro'
import AboutMe from '../components/en/AboutMe.astro';
import Footer from '../components/en/Footer.astro'
import Contact from '../components/en/Contact.astro';
import TranslateIsle from '../components/Translate'


---

<Layout title="chLuis Portfolio">
	<main>
		<Navbar />
		<Header />
		<Education />
		<Experience />
		<Proyects />
		<AboutMe />
		<Contact/>
		<TranslateIsle client:only="preact" />
	</main>
	<Footer />
</Layout>

