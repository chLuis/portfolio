<style>

    header {
        animation: headerLeave linear forwards;
        animation-timeline: view();
        animation-range-start: exit;
    }
    @keyframes headerLeave {
        0% {
            scale: 1;
            opacity: 1;
        }
        80% {
            opacity: 0;
            transform: translateY(0%);
        }
        100% {
            scale: 3;
            opacity: 0;
        }

    } 
    /* font-light text-gray-500 sm:text-xl dark:text-gray-400 w-full bg-clip-text bg-red-600 */
	.letterChange {
        font-weight: bold;
        background-image: linear-gradient(90deg, rgb(32,32,38), rgb(150,173,193), rgb(32,32,38));
        background-size: 200%;
        width: fit-content;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        -webkit-animation: text-change linear 2s infinite;
        text-rendering: optimizeLegibility;
    }
    @keyframes text-change {
        0% {
            background-position: 200% 0%;
        }
        50% {
            background-position: 100% 100%;
        }
        100% {
            background-position: 0% 200%;
        }
    }
    @-webkit-keyframes text-lights {
    0%{
        background-position: 200% 0%;
    }
    100%{
        background-position: 0 200%;
    }
}

    .cursorAnimation {
        animation: cursor-animated 1s linear 0.5s infinite;
        vertical-align: text-top;
    }

    @keyframes cursor-animated {

        50%{
            color: rgba(0, 0, 0, 0);
        }
    }
	
    .nameAppear{
        position: absolute;
        top: 0;
        right: 0;
        width: 0%;
        height: 100%;
        background-color: rgb(19,21,26);
        z-index: 21;
        animation: name-appear linear 0.5s forwards
    }

    @keyframes name-appear {
        0%{
            width: 100%;
        }
        50%{
        }
        100%{
            width: 0%;

        }
        
    }
</style>