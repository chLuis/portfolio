<section id="contact" class="p-10 lg:p-12 duration-200 w-full">
    <h4 class="flex flex-col text-4xl font-extrabold items-center sm:items-start mt-12 mb-4">CONTACT</h4>
    <ul class="w-full flex flex-col items-center sm:items-start gap-1">
        <li class="flex items-center gap-2">
            <a href="#" class="hover:text-orange-500 duration-200 cursor-pointer hover:scale-110 flex items-center gap-2">
                <span>LinkedIn</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-linkedin" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z" /><path d="M8 11l0 5" /><path d="M8 8l0 .01" /><path d="M12 16l0 -5" /><path d="M16 16v-3a2 2 0 0 0 -4 0" /></svg></a>
        </li>
        <li class="flex items-center gap-2">
            <a href="https://github.com/chLuis" target="_blank" class="hover:text-orange-500 duration-200 cursor-pointer hover:scale-110 flex items-center gap-2">
                <span>GitHub</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-github" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" /></svg></a>
        </li>
        <li class="flex flex-col items-center sm:items-start">
            <span class="mb-5 flex items-center gap-2">
                <a href="#contact" class="hover:text-orange-500 duration-200 cursor-pointer hover:scale-110 flex items-center gap-2">
                    <span>Email</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-mail" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" /><path d="M3 7l9 6l9 -6" /></svg></a>
            </span>
            <form class="flex flex-col gap-5 items-center sm:items-start">
                <label class="relative">
                    <span class="absolute -top-3 px-2 ms-2 bg-white rounded text-gray-600 font-semibold text-sm">Email</span>
                    <input type="email" maxlength="40" name="email" id="email" class="w-80 text-black p-2"/>
                </label>
                <label class="relative">
                    <span class="absolute -top-3 px-2 ms-2 bg-white rounded text-gray-600 font-semibold text-sm">Title</span>
                    <input type="text" maxlength="40" name="title" id="title" class="w-80 text-black p-2"/>
                </label>
                <label class="relative">
                    <span class="absolute -top-3 px-2 ms-2 bg-white rounded text-gray-600 font-semibold text-sm">Content</span>
                    <textarea maxlength="600" rows="6" name="content" id="content" class="w-80 resize-none text-black p-2"/>
                </label>
                <button type="button" class="border rounded-md bg-green-900 w-fit px-8">Send</button>
            </form>
        </li>
    </ul>
</section>