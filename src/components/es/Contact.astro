<script>
    const spanMail = document.querySelectorAll('span#copy-mail')
    const mailCopy = "chLuisdev@gmail.com"
    const notification = document.createElement('div');
    notification.textContent = '¡Correo copiado!';
    notification.classList.add('notification-copy')
    const styles = {
        display: 'none',
    };
    Object.assign(notification.style, styles);

    document.body.appendChild(notification);

    spanMail.forEach((span) => {
        span.addEventListener('click', () => {
            navigator.clipboard.writeText(mailCopy)
            .then(function() {
                notification.textContent = '¡Correo copiado!';
                notification.style.display = 'block';
                setTimeout(() => {
                    notification.style.display = 'none'
                }, 4000)
            })
        })
    })
    
    
 
</script>

<style is:global>
    .notification-copy {
        position: fixed;
        top: 20px;
        right: 20px;
        padding: 4px 10px;
        font-weight: bold;
        background: rgb(1,35,101);
        background: linear-gradient(270deg, rgba(86,84,166,1) 0%, rgba(82,50,121,1) 47%, rgba(1,35,101,1) 100%);
        border: 2px solid rgb(172, 163, 163);
        border-radius: 10px;
        z-index: 9999;
        color: white;
        animation: notificationAppears 5s ease-out;
    }

    @keyframes notificationAppears {
        0% {
            transform: translateX(120%);
        }
        10% {
            transform: translateX(0%);
        }
        50% {
            transform: translateX(0%);
        }
        80% {
            transform: translateX(120%);
        }
        100% {
            transform: translateX(120%);
        }
    }

</style>